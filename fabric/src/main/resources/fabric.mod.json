{
	"schemaVersion": 1,
	"id": "mtrsteamloco",
	"version": "${version}",
	"name": "Nemo's Transit Expansion",
	"description": "Various experimental addon functionalities made by Zbx1425 for the Minecraft Transit Railway mod.",
	"authors": [
		"Zbx1425"
	],
	"contact": {
		"homepage": "https://www.zbx1425.cn/nautilus/mtr-nte/",
		"sources": "https://github.com/zbx1425/mtr-steamloco"
	},
	"license": "MIT",
	"icon": "icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"cn.zbx1425.mtrsteamloco.fabric.MainFabric"
		],
		"client": [
			"cn.zbx1425.mtrsteamloco.fabric.MainFabricClient"
		],
		"modmenu": [
			"cn.zbx1425.mtrsteamloco.fabric.ModMenuApiImpl"
		]
	},
	"mixins": [
		"mtrsteamloco.mixins.json"
	],
	"depends": {
		"fabric": "*",
		"minecraft": "${minecraft_version}",
		"mtr": ">=${mtr_min_version}",
		"cloth-config": "*"
	},
	"accessWidener" : "mtrsteamloco.accesswidener"
}
